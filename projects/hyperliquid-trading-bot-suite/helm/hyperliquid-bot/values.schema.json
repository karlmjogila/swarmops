{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hyperliquid Bot Helm Chart Values",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "description": "Global settings",
      "properties": {
        "imagePullSecrets": {
          "type": "array",
          "description": "Image pull secrets for all deployments",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" }
            }
          }
        },
        "storageClass": {
          "type": "string",
          "description": "Storage class for all PVCs"
        }
      }
    },
    "backend": {
      "type": "object",
      "description": "Backend configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "replicaCount": {
          "type": "integer",
          "minimum": 1,
          "default": 2
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string" },
            "pullPolicy": { "type": "string", "enum": ["Always", "IfNotPresent", "Never"] },
            "tag": { "type": "string" }
          }
        },
        "resources": {
          "type": "object",
          "properties": {
            "limits": { "type": "object" },
            "requests": { "type": "object" }
          }
        },
        "autoscaling": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "minReplicas": { "type": "integer", "minimum": 1 },
            "maxReplicas": { "type": "integer", "minimum": 1 },
            "targetCPUUtilizationPercentage": { "type": "integer", "minimum": 1, "maximum": 100 },
            "targetMemoryUtilizationPercentage": { "type": "integer", "minimum": 1, "maximum": 100 }
          }
        }
      }
    },
    "frontend": {
      "type": "object",
      "description": "Frontend configuration",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "replicaCount": { "type": "integer", "minimum": 1 }
      }
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "className": { "type": "string" },
        "host": { "type": "string", "format": "hostname" },
        "tls": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "secretName": { "type": "string" }
          }
        }
      }
    },
    "config": {
      "type": "object",
      "properties": {
        "environment": { "type": "string", "enum": ["development", "staging", "production"] },
        "logLevel": { "type": "string", "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"] },
        "prometheusEnabled": { "type": "boolean" },
        "trading": {
          "type": "object",
          "properties": {
            "maxRiskPerTrade": { "type": "string" },
            "maxConcurrentPositions": { "type": "string" },
            "testnet": { "type": "string" }
          }
        }
      }
    },
    "secrets": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "existingSecret": { "type": "string" }
      }
    },
    "postgresql": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" }
      }
    },
    "redis": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" }
      }
    }
  }
}
