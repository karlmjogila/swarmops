# ===== PRODUCTION ENVIRONMENT CONFIGURATION =====
# Copy this file to .env for production deployment
# SECURITY: Never commit .env files with real secrets!

# ===== DATABASE =====
POSTGRES_USER=hlbot
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=hlbot
POSTGRES_PORT=5432
DATABASE_URL=postgresql://hlbot:CHANGE_ME_TO_SECURE_PASSWORD@postgres:5432/hlbot

# ===== REDIS =====
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===== API KEYS (REQUIRED) =====
# Anthropic Claude API - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-production-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Hyperliquid API - Get from: https://app.hyperliquid.xyz/
HYPERLIQUID_API_KEY=
HYPERLIQUID_PRIVATE_KEY=
HYPERLIQUID_MAINNET=false  # false = testnet, true = MAINNET (REAL MONEY!)

# ===== SECURITY (CRITICAL - CHANGE THESE!) =====
SECRET_KEY=GENERATE_A_SECURE_RANDOM_STRING_HERE
JWT_SECRET=GENERATE_ANOTHER_SECURE_RANDOM_STRING_HERE
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com

# ===== FEATURES =====
ENABLE_PAPER_MODE=true
ENABLE_LLM_REASONING=true
ENABLE_TRADE_LOGGING=true
ENABLE_WEBSOCKET_STREAMING=true

# ===== BACKTEST SETTINGS =====
DEFAULT_INITIAL_BALANCE=10000.0
DEFAULT_RISK_PER_TRADE=0.02
DEFAULT_MAX_POSITIONS=3
DEFAULT_COMMISSION=0.0005

# ===== PATTERN DETECTION =====
MIN_CONFLUENCE_SCORE=60
ENABLE_MULTI_TIMEFRAME=true
TIMEFRAMES=5m,15m,30m,1h,4h

# ===== CONTENT INGESTION =====
WHISPER_MODEL=base
WHISPER_LANGUAGE=en
VIDEO_CACHE_DIR=/app/data/cache/videos
PDF_CACHE_DIR=/app/data/cache/pdfs
MAX_VIDEO_DURATION=3600
MAX_PDF_PAGES=100

# ===== SERVER =====
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=3000
FRONTEND_URL=https://yourdomain.com
PUBLIC_API_URL=https://api.yourdomain.com
PUBLIC_WS_URL=wss://api.yourdomain.com
CORS_ORIGINS=https://yourdomain.com

# ===== CELERY =====
CELERY_TASK_TIMEOUT=3600

# ===== LOGGING =====
LOG_LEVEL=INFO
LOG_FILE=/app/logs/hlbot.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
ENABLE_SQL_LOGGING=false

# ===== PERFORMANCE =====
MAX_WORKERS=4
WEBSOCKET_MAX_CONNECTIONS=100
CACHE_TTL=3600
ENABLE_QUERY_CACHE=true

# ===== PRODUCTION =====
DEBUG=false
RELOAD=false
ENABLE_PROFILING=false
NODE_ENV=production

# ===== MONITORING (Optional) =====
# SENTRY_DSN=https://your-sentry-dsn-here
# PROMETHEUS_PORT=9090

# ===== BACKUP =====
# BACKUP_RETENTION_DAYS=30
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
