# docker-compose.override.yml.example
#
# Docker Compose automatically merges this file if named docker-compose.override.yml
# Use this for local development customizations without modifying the main file
#
# Copy this file: cp docker-compose.override.yml.example docker-compose.override.yml
# Then customize as needed

services:
  # Example: Expose PostgreSQL to host for GUI tools
  # postgres:
  #   ports:
  #     - "5433:5432"  # Use different port to avoid conflicts

  # Example: Add debug port for Python debugger
  # backend:
  #   ports:
  #     - "8000:8000"
  #     - "5678:5678"  # debugpy port
  #   environment:
  #     - PYTHONBREAKPOINT=debugpy.breakpoint

  # Example: Mount additional volumes
  # backend:
  #   volumes:
  #     - ./scripts:/app/scripts
  #     - ./notebooks:/app/notebooks

  # Example: Use local built image instead of rebuilding
  # frontend:
  #   image: hlbot-frontend:local
  #   build:
  #     cache_from:
  #       - hlbot-frontend:latest

  # Example: Override environment variables
  # backend:
  #   environment:
  #     LOG_LEVEL: DEBUG
  #     ENABLE_SQL_LOGGING: true

  # Example: Add development tools container
  # pgadmin:
  #   image: dpage/pgadmin4:latest
  #   environment:
  #     PGADMIN_DEFAULT_EMAIL: admin@hlbot.local
  #     PGADMIN_DEFAULT_PASSWORD: admin
  #   ports:
  #     - "5050:80"
  #   networks:
  #     - hlbot-network

  # Example: Redis Commander for Redis debugging
  # redis-commander:
  #   image: rediscommander/redis-commander:latest
  #   environment:
  #     REDIS_HOSTS: local:redis:6379
  #   ports:
  #     - "8081:8081"
  #   networks:
  #     - hlbot-network
  #   depends_on:
  #     - redis
