# ===== DATABASE =====
DATABASE_URL=postgresql://hlbot:hlbot@localhost:5432/hlbot
# For Docker: postgresql://hlbot:hlbot@postgres:5432/hlbot

# ===== REDIS =====
REDIS_URL=redis://localhost:6379/0
# For Docker: redis://redis:6379/0

# ===== API KEYS =====
# Anthropic Claude API (for LLM features: strategy extraction, trade reasoning)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Hyperliquid API (for live trading - optional for backtesting)
# Get your keys from: https://app.hyperliquid.xyz/
HYPERLIQUID_API_KEY=
HYPERLIQUID_PRIVATE_KEY=
HYPERLIQUID_MAINNET=false  # false = testnet, true = mainnet (use with caution!)

# ===== SECURITY =====
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-too
ALLOWED_HOSTS=localhost,127.0.0.1

# ===== FEATURES =====
ENABLE_PAPER_MODE=true            # Simulate trades without real money
ENABLE_LLM_REASONING=true         # Use Claude for trade explanations
ENABLE_TRADE_LOGGING=true         # Log all trades to database
ENABLE_WEBSOCKET_STREAMING=true   # Real-time backtest updates

# ===== BACKTEST SETTINGS =====
DEFAULT_INITIAL_BALANCE=10000.0   # Starting balance for backtests
DEFAULT_RISK_PER_TRADE=0.02       # Risk 2% per trade
DEFAULT_MAX_POSITIONS=3           # Max concurrent positions
DEFAULT_COMMISSION=0.0005         # 0.05% commission per trade

# ===== PATTERN DETECTION =====
MIN_CONFLUENCE_SCORE=60           # Minimum score to generate signal (0-100)
ENABLE_MULTI_TIMEFRAME=true       # Analyze multiple timeframes
TIMEFRAMES=5m,15m,30m,1h,4h       # Timeframes to analyze

# ===== HYPERLIQUID DATA SYNC =====
# All timeframes to sync from Hyperliquid API (JSON array format)
HL_SYNC_TIMEFRAMES='["1m", "5m", "15m", "30m", "1h", "4h", "1d", "1w", "1M"]'
# Default symbols to sync
HL_SYNC_SYMBOLS='["BTC", "ETH", "SOL", "ARB", "DOGE", "WIF", "PEPE", "HYPE"]'
# Sync interval in seconds (3600 = 1 hour)
HL_SYNC_INTERVAL_SECONDS=3600
# Data retention: 1m candles kept for N days (1095 = 3 years)
HL_RETENTION_1M_DAYS=1095

# ===== CONTENT INGESTION =====
WHISPER_MODEL=base                # tiny, base, small, medium, large
WHISPER_LANGUAGE=en               # Language for transcription
VIDEO_CACHE_DIR=./data/cache/videos
PDF_CACHE_DIR=./data/cache/pdfs
MAX_VIDEO_DURATION=3600           # Max video duration in seconds (1 hour)
MAX_PDF_PAGES=100                 # Max PDF pages to process

# ===== SERVER =====
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ===== CELERY (Background Jobs) =====
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TIMEOUT=3600          # 1 hour timeout for long tasks

# ===== LOGGING =====
LOG_LEVEL=INFO                    # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/hlbot.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
ENABLE_SQL_LOGGING=false          # Log all SQL queries (verbose!)

# ===== PERFORMANCE =====
MAX_WORKERS=4                     # API worker processes
WEBSOCKET_MAX_CONNECTIONS=100
CACHE_TTL=3600                    # Cache expiry in seconds
ENABLE_QUERY_CACHE=true

# ===== DEVELOPMENT =====
DEBUG=false                       # Enable debug mode (DON'T USE IN PRODUCTION)
RELOAD=false                      # Auto-reload on code changes
ENABLE_PROFILING=false            # Enable performance profiling

# ===== MONITORING (Optional) =====
# SENTRY_DSN=https://...          # Sentry error tracking
# PROMETHEUS_PORT=9090            # Metrics export
