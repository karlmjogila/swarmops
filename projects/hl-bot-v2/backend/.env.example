# Application Configuration
APP_NAME="HL Trading Bot"
DEBUG=false
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=development

# Logging
LOG_LEVEL=info

# API Keys (add your keys here)
# API_KEY=your-api-key-here

# LLM Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database (TimescaleDB)
DATABASE_URL=postgresql://hlbot:hlbot_dev_password@localhost:5432/hlbot
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hlbot
DB_USER=hlbot
DB_PASSWORD=hlbot_dev_password

# Redis & Celery
REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# Hyperliquid Data Sync Configuration
# ==============================================================================

# Timeframes to sync from Hyperliquid (JSON array)
# Available: 1m, 3m, 5m, 15m, 30m, 1h, 2h, 4h, 8h, 12h, 1d, 3d, 1w, 1M
HL_SYNC_TIMEFRAMES='["1m", "5m", "15m", "30m", "1h", "4h", "1d", "1w", "1M"]'

# Default symbols to sync (JSON array)
HL_SYNC_SYMBOLS='["BTC", "ETH", "SOL", "ARB", "DOGE", "WIF", "PEPE", "HYPE"]'

# Sync interval in seconds (3600 = 1 hour)
HL_SYNC_INTERVAL_SECONDS=3600

# ==============================================================================
# Data Retention Policy
# ==============================================================================

# 1m candles retention in days (3 years = 1095 days)
# Note: Other timeframes (5m, 15m, 30m, 1h, 4h, 1d, 1w, 1M) are kept FOREVER
HL_RETENTION_1M_DAYS=1095

# How often to run cleanup (in seconds, default: 86400 = 1 day)
HL_CLEANUP_INTERVAL_SECONDS=86400

# ==============================================================================
# TimescaleDB Compression Settings
# ==============================================================================

# Compress chunks older than this many days (default: 7)
HL_COMPRESSION_AFTER_DAYS=7

# Chunk interval for 1m data in days (smaller = faster cleanup)
HL_CHUNK_INTERVAL_1M_DAYS=1

# Chunk interval for other timeframes in days
HL_CHUNK_INTERVAL_OTHER_DAYS=7
